{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C Program (server.exe)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/server.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                { "name": "PATH", "value": "C:\\msys64\\ucrt64\\bin;${env:PATH}" }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
